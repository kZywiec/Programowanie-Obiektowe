<Window x:Class="OrderApp.ExeptionPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderApp"
        mc:Ignorable="d"
        Title="ExeptionPopUp" Height="200" Width="250" WindowStartupLocation="CenterScreen">
    <Grid Background="Red">
        <TextBlock Name="Error_name" Text="Error." VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="30" Margin="0,30,0,0"/>
        <Button Click="Exit_Click" Content="OK" Width="155" Style="{StaticResource LoginCellButon}" Background="#F0A160" VerticalAlignment="Bottom" Margin="0,0,0,15"/>
    </Grid>
</Window>
